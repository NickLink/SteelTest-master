<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="myHeader">
        <item name="fontPath">fonts/robotoregular.ttf</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myHeaderOne" parent="myHeader">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myHeaderTwo" parent="myHeader">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="myEditText">
        <item name="fontPath">fonts/robotolight.ttf</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/login_black</item>
        <item name="android:textColorHint">@color/login_gray</item>
        <item name="android:ems">10</item>
    </style>

    <style name="myUsualText">
        <item name="fontPath">fonts/robotolight.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/login_black</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="myUsualBoldText" parent="myUsualText">
        <item name="fontPath">fonts/robotobold.ttf</item>
    </style>

</resources>
